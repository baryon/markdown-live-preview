{
  "name": "baryon-markdown-live-preview",
  "displayName": "%displayName%",
  "version": "1.2.3",
  "description": "%description%",
  "icon": "media/mlp.png",
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "markdown",
    "preview",
    "mermaid",
    "katex",
    "marp",
    "obsidian",
    "mdx"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "bugs": {
    "url": "https://github.com/baryon/markdown-live-preview/issues"
  },
  "repository": "https://github.com/baryon/markdown-live-preview.git",
  "license": "MIT",
  "contributors": [
    "baryon",
    "claude code"
  ],
  "publisher": "baryon",
  "main": "./out/native/extension.js",
  "browser": "./out/web/extension.js",
  "scripts": {
    "build": "node build.js",
    "watch": "node build.js --watch",
    "package": "vsce package --no-dependencies",
    "package:pre": "pnpm build && vsce package --no-dependencies --pre-release",
    "check": "biome check .",
    "fix": "biome check --write .",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. $SERVE_DIR",
    "vscode:prepublish": "pnpm install && pnpm build"
  },
  "contributes": {
    "commands": [
      {
        "command": "markdown-live-preview.openPreviewToTheSide",
        "title": "%markdown-live-preview.openPreviewToTheSide.title%",
        "category": "Markdown",
        "icon": {
          "light": "./media/preview-right-light.svg",
          "dark": "./media/preview-right-dark.svg"
        }
      },
      {
        "command": "markdown-live-preview.openPreview",
        "title": "%markdown-live-preview.openPreview.title%",
        "category": "Markdown",
        "icon": {
          "light": "./media/preview-right-light.svg",
          "dark": "./media/preview-right-dark.svg"
        }
      },
      {
        "command": "markdown-live-preview.toggleScrollSync",
        "title": "%markdown-live-preview.toggleScrollSync.title%"
      },
      {
        "command": "markdown-live-preview.toggleLiveUpdate",
        "title": "%markdown-live-preview.toggleLiveUpdate.title%"
      },
      {
        "command": "markdown-live-preview.toggleBreakOnSingleNewLine",
        "title": "%markdown-live-preview.toggleBreakOnSingleNewLine.title%"
      },
      {
        "command": "markdown-live-preview.openImageHelper",
        "title": "%markdown-live-preview.openImageHelper.title%"
      },
      {
        "command": "markdown-live-preview.syncPreview",
        "title": "%markdown-live-preview.syncPreview.title%"
      },
      {
        "command": "markdown-live-preview.customizeCss",
        "title": "%markdown-live-preview.customizeCss.title%",
        "enablement": "!isWeb"
      },
      {
        "command": "markdown-live-preview.insertNewSlide",
        "title": "%markdown-live-preview.insertNewSlide.title%"
      },
      {
        "command": "markdown-live-preview.insertTable",
        "title": "%markdown-live-preview.insertTable.title%"
      },
      {
        "command": "markdown-live-preview.insertPagebreak",
        "title": "%markdown-live-preview.insertPagebreak.title%"
      },
      {
        "command": "markdown-live-preview.createTOC",
        "title": "%markdown-live-preview.createTOC.title%",
        "enablement": "!isWeb"
      },
      {
        "command": "markdown-live-preview.openConfigScript",
        "title": "%markdown-live-preview.openConfigScript.title%",
        "enablement": "!isWeb"
      },
      {
        "command": "markdown-live-preview.extendParser",
        "title": "%markdown-live-preview.extendParser.title%",
        "enablement": "!isWeb"
      },
      {
        "command": "markdown-live-preview.customizePreviewHtmlHead",
        "title": "%markdown-live-preview.customizePreviewHtmlHead.title%",
        "enablement": "!isWeb"
      },
      {
        "command": "markdown-live-preview.switchToEditMode",
        "title": "%markdown-live-preview.switchToEditMode.title%"
      },
      {
        "command": "markdown-live-preview.switchToPreviewMode",
        "title": "%markdown-live-preview.switchToPreviewMode.title%"
      },
      {
        "command": "markdown-live-preview.switchToSideBySideMode",
        "title": "%markdown-live-preview.switchToSideBySideMode.title%"
      },
      {
        "command": "markdown-live-preview.runCodeChunk",
        "title": "%markdown-live-preview.runCodeChunk.title%",
        "enablement": "!isWeb"
      },
      {
        "command": "markdown-live-preview.runAllCodeChunks",
        "title": "%markdown-live-preview.runAllCodeChunks.title%",
        "enablement": "!isWeb"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Markdown Live Preview",
      "properties": {
        "markdown-live-preview.configPath": {
          "markdownDescription": "%config.configPath.description%",
          "default": "",
          "type": "string"
        },
        "markdown-live-preview.breakOnSingleNewLine": {
          "description": "%config.breakOnSingleNewLine.description%",
          "default": true,
          "type": "boolean"
        },
        "markdown-live-preview.scrollSync": {
          "description": "%config.scrollSync.description%",
          "default": true,
          "type": "boolean"
        },
        "markdown-live-preview.liveUpdate": {
          "description": "%config.liveUpdate.description%",
          "default": true,
          "type": "boolean"
        },
        "markdown-live-preview.liveUpdateDebounceMs": {
          "description": "%config.liveUpdateDebounceMs.description%",
          "default": 300,
          "type": "number",
          "minimum": 0,
          "maximum": 5000
        },
        "markdown-live-preview.previewMode": {
          "markdownDescription": "%config.previewMode.description%",
          "type": "string",
          "enum": [
            "Single Preview",
            "Multiple Previews",
            "Previews Only"
          ],
          "default": "Single Preview"
        },
        "markdown-live-preview.automaticallyShowPreviewOfMarkdownBeingEdited": {
          "description": "%config.automaticallyShowPreview.description%",
          "default": false,
          "type": "boolean"
        },
        "markdown-live-preview.disableAutoPreviewForUriSchemes": {
          "markdownDescription": "%config.disableAutoPreviewForUriSchemes.description%",
          "default": [
            "vscode-notebook-cell"
          ],
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "markdown-live-preview.previewColorScheme": {
          "type": "string",
          "enum": [
            "selectedPreviewTheme",
            "systemColorScheme",
            "editorColorScheme"
          ],
          "default": "selectedPreviewTheme",
          "markdownEnumDescriptions": [
            "%config.previewColorScheme.enumDescription.0%",
            "%config.previewColorScheme.enumDescription.1%",
            "%config.previewColorScheme.enumDescription.2%"
          ]
        },
        "markdown-live-preview.enableTypographer": {
          "description": "%config.enableTypographer.description%",
          "default": false,
          "type": "boolean"
        },
        "markdown-live-preview.mathRenderingOption": {
          "description": "%config.mathRenderingOption.description%",
          "default": "KaTeX",
          "type": "string",
          "enum": [
            "KaTeX",
            "MathJax",
            "None"
          ]
        },
        "markdown-live-preview.mathInlineDelimiters": {
          "description": "%config.mathInlineDelimiters.description%",
          "default": [
            [
              "$",
              "$"
            ],
            [
              "\\(",
              "\\)"
            ]
          ],
          "type": "array"
        },
        "markdown-live-preview.mathBlockDelimiters": {
          "description": "%config.mathBlockDelimiters.description%",
          "default": [
            [
              "$$",
              "$$"
            ],
            [
              "\\[",
              "\\]"
            ]
          ],
          "type": "array"
        },
        "markdown-live-preview.mathjaxV3ScriptSrc": {
          "description": "%config.mathjaxV3ScriptSrc.description%",
          "default": "https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js",
          "type": "string"
        },
        "markdown-live-preview.enableWikiLinkSyntax": {
          "description": "%config.enableWikiLinkSyntax.description%",
          "default": true,
          "type": "boolean"
        },
        "markdown-live-preview.enableLinkify": {
          "description": "%config.enableLinkify.description%",
          "default": true,
          "type": "boolean"
        },
        "markdown-live-preview.useGitHubStylePipedLink": {
          "description": "%config.useGitHubStylePipedLink.description%",
          "default": false,
          "type": "boolean"
        },
        "markdown-live-preview.enableEmojiSyntax": {
          "description": "%config.enableEmojiSyntax.description%",
          "default": true,
          "type": "boolean"
        },
        "markdown-live-preview.wikiLinkTargetFileExtension": {
          "markdownDescription": "%config.wikiLinkTargetFileExtension.description%",
          "default": ".md",
          "type": "string"
        },
        "markdown-live-preview.wikiLinkTargetFileNameChangeCase": {
          "markdownDescription": "%config.wikiLinkTargetFileNameChangeCase.description%",
          "default": "none",
          "type": "string",
          "enum": [
            "none",
            "camelCase",
            "pascalCase",
            "kebabCase",
            "snakeCase",
            "constantCase",
            "lowerCase",
            "upperCase"
          ]
        },
        "markdown-live-preview.frontMatterRenderingOption": {
          "description": "%config.frontMatterRenderingOption.description%",
          "type": "string",
          "enum": [
            "none",
            "table",
            "code block"
          ],
          "default": "table"
        },
        "markdown-live-preview.mermaidTheme": {
          "description": "%config.mermaidTheme.description%",
          "default": "github-light",
          "type": "string",
          "enum": [
            "zinc-light",
            "zinc-dark",
            "tokyo-night",
            "tokyo-night-storm",
            "tokyo-night-light",
            "catppuccin-mocha",
            "catppuccin-latte",
            "nord",
            "nord-light",
            "dracula",
            "github-light",
            "github-dark",
            "solarized-light",
            "solarized-dark",
            "one-dark"
          ]
        },
        "markdown-live-preview.mermaidAsciiMode": {
          "description": "%config.mermaidAsciiMode.description%",
          "type": "boolean",
          "default": false
        },
        "markdown-live-preview.codeBlockTheme": {
          "description": "%config.codeBlockTheme.description%",
          "default": "auto",
          "type": "string",
          "enum": [
            "auto",
            "github-dark",
            "github-light",
            "monokai",
            "one-dark-pro",
            "dracula",
            "nord",
            "material-theme-darker",
            "material-theme-lighter",
            "solarized-dark",
            "solarized-light",
            "vitesse-dark",
            "vitesse-light"
          ]
        },
        "markdown-live-preview.previewTheme": {
          "description": "%config.previewTheme.description%",
          "default": "github",
          "type": "string",
          "enum": [
            "github",
            "obsidian",
            "vue",
            "lark",
            "smartblue",
            "medium",
            "gothic",
            "dracula",
            "nord",
            "one-dark",
            "tokyo-night",
            "monokai",
            "solarized"
          ],
          "enumDescriptions": [
            "%config.previewTheme.enumDescription.0%",
            "%config.previewTheme.enumDescription.1%",
            "%config.previewTheme.enumDescription.2%",
            "%config.previewTheme.enumDescription.3%",
            "%config.previewTheme.enumDescription.4%",
            "%config.previewTheme.enumDescription.5%",
            "%config.previewTheme.enumDescription.6%",
            "%config.previewTheme.enumDescription.7%",
            "%config.previewTheme.enumDescription.8%",
            "%config.previewTheme.enumDescription.9%",
            "%config.previewTheme.enumDescription.10%",
            "%config.previewTheme.enumDescription.11%",
            "%config.previewTheme.enumDescription.12%"
          ]
        },
        "markdown-live-preview.revealjsTheme": {
          "description": "%config.revealjsTheme.description%",
          "default": "white.css",
          "type": "string",
          "enum": [
            "beige.css",
            "black.css",
            "blood.css",
            "league.css",
            "moon.css",
            "night.css",
            "serif.css",
            "simple.css",
            "sky.css",
            "solarized.css",
            "white.css",
            "none.css"
          ]
        },
        "markdown-live-preview.imageFolderPath": {
          "description": "%config.imageFolderPath.description%",
          "default": "/assets",
          "type": "string"
        },
        "markdown-live-preview.hideDefaultVSCodeMarkdownPreviewButtons": {
          "description": "%config.hideDefaultVSCodeMarkdownPreviewButtons.description%",
          "default": true,
          "type": "boolean"
        },
        "markdown-live-preview.jsdelivrCdnHost": {
          "markdownDescription": "%config.jsdelivrCdnHost.description%",
          "default": "cdn.jsdelivr.net",
          "type": "string"
        },
        "markdown-live-preview.markdownFileExtensions": {
          "description": "%config.markdownFileExtensions.description%",
          "default": [
            ".md",
            ".markdown",
            ".mdown",
            ".mkdn",
            ".mkd",
            ".rmd",
            ".qmd",
            ".mdx"
          ],
          "type": "array"
        },
        "markdown-live-preview.enablePreviewZenMode": {
          "description": "%config.enablePreviewZenMode.description%",
          "default": true,
          "type": "boolean"
        },
        "markdown-live-preview.showPageToolbar": {
          "description": "%config.showPageToolbar.description%",
          "default": true,
          "type": "boolean"
        },
        "markdown-live-preview.markdownOpenMode": {
          "markdownDescription": "%config.markdownOpenMode.description%",
          "type": "string",
          "enum": [
            "edit",
            "preview",
            "side-by-side"
          ],
          "enumDescriptions": [
            "%config.markdownOpenMode.enumDescription.0%",
            "%config.markdownOpenMode.enumDescription.1%",
            "%config.markdownOpenMode.enumDescription.2%"
          ],
          "default": "side-by-side"
        },
        "markdown-live-preview.enableScriptExecution": {
          "markdownDescription": "%config.enableScriptExecution.description%",
          "default": false,
          "type": "boolean"
        },
        "markdown-live-preview.codeChunkDefaultShell": {
          "description": "%config.codeChunkDefaultShell.description%",
          "default": "",
          "type": "string"
        },
        "markdown-live-preview.latexEngine": {
          "description": "%config.latexEngine.description%",
          "default": "pdflatex",
          "type": "string",
          "enum": [
            "pdflatex",
            "xelatex",
            "lualatex"
          ]
        },
        "markdown-live-preview.codeChunkExecutionTimeout": {
          "description": "%config.codeChunkExecutionTimeout.description%",
          "default": 30000,
          "type": "number",
          "minimum": 1000,
          "maximum": 300000
        }
      }
    },
    "customEditors": [
      {
        "viewType": "markdown-live-preview",
        "displayName": "%customEditorPreviewDisplayName%",
        "selector": [
          {
            "filenamePattern": "*.{md,markdown,mdown,mkdn,mkd,rmd,qmd,mdx}"
          }
        ],
        "priority": "option"
      }
    ],
    "keybindings": [
      {
        "command": "markdown-live-preview.openPreviewToTheSide",
        "key": "ctrl+k v",
        "mac": "cmd+k v",
        "when": "editorLangId == markdown || editorLangId == quarto || resourceExtname =~ /\\.(md|markdown|mdown|mkdn|mkd|rmd|qmd|mdx)$/i"
      },
      {
        "command": "markdown-live-preview.openPreview",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorLangId == markdown || editorLangId == quarto || resourceExtname =~ /\\.(md|markdown|mdown|mkdn|mkd|rmd|qmd|mdx)$/i"
      },
      {
        "command": "markdown-live-preview.syncPreview",
        "key": "ctrl+shift+s",
        "when": "editorLangId == markdown || editorLangId == quarto || resourceExtname =~ /\\.(md|markdown|mdown|mkdn|mkd|rmd|qmd|mdx)$/i"
      },
      {
        "command": "markdown-live-preview.runCodeChunk",
        "key": "shift+enter",
        "when": "markdown-live-preview.enableScriptExecution && (editorLangId == markdown || editorLangId == quarto || resourceExtname =~ /\\.(md|markdown|mdown|mkdn|mkd|rmd|qmd|mdx)$/i)"
      },
      {
        "command": "markdown-live-preview.runAllCodeChunks",
        "key": "ctrl+shift+enter",
        "mac": "cmd+shift+enter",
        "when": "markdown-live-preview.enableScriptExecution && (editorLangId == markdown || editorLangId == quarto || resourceExtname =~ /\\.(md|markdown|mdown|mkdn|mkd|rmd|qmd|mdx)$/i)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "markdown-live-preview.openPreviewToTheSide",
          "when": "resourceExtname =~ /\\.(md|markdown|mdown|mkdn|mkd|rmd|qmd|mdx)$/i",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "markdown-live-preview.openPreviewToTheSide",
          "when": "editorLangId == markdown || editorLangId == quarto || resourceExtname =~ /\\.(md|markdown|mdown|mkdn|mkd|rmd|qmd|mdx)$/i",
          "group": "markdown-live-preview"
        }
      ],
      "editor/title": [
        {
          "command": "markdown-live-preview.openPreviewToTheSide",
          "when": "editorLangId == markdown || editorLangId == quarto || resourceExtname =~ /\\.(md|markdown|mdown|mkdn|mkd|rmd|qmd|mdx)$/i",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "markdown-live-preview.switchToEditMode",
          "when": "resourceExtname =~ /\\.(md|markdown|mdown|mkdn|mkd|rmd|qmd|mdx)$/i",
          "group": "markdown-live-preview@1"
        },
        {
          "command": "markdown-live-preview.switchToPreviewMode",
          "when": "resourceExtname =~ /\\.(md|markdown|mdown|mkdn|mkd|rmd|qmd|mdx)$/i",
          "group": "markdown-live-preview@2"
        },
        {
          "command": "markdown-live-preview.switchToSideBySideMode",
          "when": "resourceExtname =~ /\\.(md|markdown|mdown|mkdn|mkd|rmd|qmd|mdx)$/i",
          "group": "markdown-live-preview@3"
        }
      ],
      "webview/title/context": [
        {
          "command": "markdown-live-preview.switchToEditMode",
          "when": "activeWebviewPanelId == 'markdown-live-preview'",
          "group": "markdown-live-preview@1"
        },
        {
          "command": "markdown-live-preview.switchToPreviewMode",
          "when": "activeWebviewPanelId == 'markdown-live-preview'",
          "group": "markdown-live-preview@2"
        },
        {
          "command": "markdown-live-preview.switchToSideBySideMode",
          "when": "activeWebviewPanelId == 'markdown-live-preview'",
          "group": "markdown-live-preview@3"
        }
      ],
      "commandPalette": [
        {
          "command": "markdown-live-preview.switchToEditMode",
          "when": "editorLangId == markdown || editorLangId == quarto || resourceExtname =~ /\\.(md|markdown|mdown|mkdn|mkd|rmd|qmd|mdx)$/i"
        },
        {
          "command": "markdown-live-preview.switchToPreviewMode",
          "when": "editorLangId == markdown || editorLangId == quarto || resourceExtname =~ /\\.(md|markdown|mdown|mkdn|mkd|rmd|qmd|mdx)$/i"
        },
        {
          "command": "markdown-live-preview.switchToSideBySideMode",
          "when": "editorLangId == markdown || editorLangId == quarto || resourceExtname =~ /\\.(md|markdown|mdown|mkdn|mkd|rmd|qmd|mdx)$/i"
        }
      ]
    }
  },
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:quarto",
    "onLanguage:mdx"
  ],
  "dependencies": {
    "@marp-team/marp-core": "^4.2.0",
    "async-mutex": "^0.4.0",
    "beautiful-mermaid": "^0.1.3",
    "katex": "^0.16.21",
    "markdown-it": "^14.1.0",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-mark": "^4.0.0",
    "markdown-it-sub": "^2.0.0",
    "markdown-it-sup": "^2.0.0",
    "markdown-it-task-lists": "^2.1.1",
    "shiki": "^1.29.2",
    "sucrase": "^3.35.1",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@types/katex": "^0.16.7",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "16",
    "@types/vscode": "1.70.0",
    "@vscode/test-web": "^0.0.67",
    "esbuild": "^0.25.0",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "typescript": "^5.2.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "@playwright/browser-chromium"
    ]
  },
  "engines": {
    "vscode": "^1.70.0"
  }
}
